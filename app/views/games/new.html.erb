<ul>
  <% @letters.each do |letter| %>
  <li><%= letter %></li>
  <% end  %>
</ul>

<form class="form-inline" action="/score" method="post" data-turbo="false">
  <input type="text" name="guess" placeholder="Guess a word">
  <input type="submit" value="Ask!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
